{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Perplexity",
  "version": "0.1.1",
  "identifier": "com.kaen.perplexity",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    },
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Perplexity AI Desktop Client",
    "longDescription": "A native desktop wrapper for Perplexity AI with system tray, global shortcuts, and custom titlebar.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "release": "1"
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
